{
  "name": "kusion",
  "displayName": "Kusion",
  "description": "",
  "version": "0.0.6",
  "publisher": "KusionStack",
  "repository": "https://github.com/KusionStack/vscode-kusion",
  "engines": {
    "vscode": "^1.71.0"
  },
  "icon": "./images/kusion.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:KCL"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "kusionExplorer": [
        {
          "id": "kusionProjects",
          "name": "kusion projects"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kusionExplorer",
          "title": "Kusion Explorer",
          "icon": "images/kusion_k.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "kusionProjects",
        "contents": "No Kusion projects found [learn more](https://kusionstack.io/docs/user_docs/concepts/konfig#project--stack).\n[Create Kusion Project](command:kusion.createProject)"
      }
    ],
    "taskDefinitions": [
      {
        "type": "kusion",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The Kusion task to customize"
          },
          "file": {
            "type": "string",
            "description": "The Kusion file that provides the task. Can be omitted."
          }
        }
      },
      {
        "type": "custombuildscript",
        "required": [
          "flavor"
        ],
        "properties": {
          "flavor": {
            "type": "string",
            "description": "The build flavor. Should be either '32' or '64'."
          },
          "flags": {
            "type": "array",
            "description": "Additional build flags."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "kusion.showPreview",
        "category": "Kusion",
        "title": "Open Data Preview",
        "icon": {
          "light": "./images/preview-light.svg",
          "dark": "./images/preview-dark.svg"
        }
      },
      {
        "command": "kusion.showPreviewToSide",
        "category": "Kusion",
        "title": "Open Data Preview to the Side",
        "icon": "$(open-preview)"
      },
      {
        "command": "kusion.compile",
        "category": "Kusion",
        "title": "Compile"
      },
      {
        "command": "kusion.destroy",
        "category": "Kusion",
        "title": "Destroy"
      },
      {
        "command": "kusion.apply",
        "category": "Kusion",
        "title": "Preview Live Diff and Apply"
      },
      {
        "command": "kusion.createProject",
        "category": "Kusion",
        "title": "Create Kusion Project by Binding Application with Infra Code"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "kusion.showPreviewToSide",
          "when": "editorLangId == KCL && inKusionStack",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "kusion.compile",
          "group": "Kusion group@1",
          "when": "inKusionProject"
        },
        {
          "command": "kusion.apply",
          "group": "Kusion group@2",
          "when": "inKusionProject"
        },
        {
          "command": "kusion.destroy",
          "group": "Kusion group@3",
          "when": "inKusionProject"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^17.0.36",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.23.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@types/shelljs": "^0.8.11",
    "shelljs": "^0.8.5",
    "shiki": "^0.14.1",
    "vscode-uri": "^3.0.3"
  }
}
